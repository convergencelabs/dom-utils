{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist/lib",
    "allowJs": true,
    "target": "ESNext",
    "module": "ESNext",
    "declaration": false,
    "noImplicitAny": false,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "skipLibCheck": true,
    "stripInternal": true,
    "removeComments": true,
    "lib": ["es2015", "dom"]
  },
  "include": ["src/**/*"]
}